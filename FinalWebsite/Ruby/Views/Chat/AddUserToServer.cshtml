@model Ruby.Models.UserServer

@{
    ViewBag.Title = "AddUserToServer";

    SelectList servers = new SelectList(ViewBag.Servers, "ServerId", "ServerName");
}

<h2 style="padding-top: 2em;">Join a server!</h2>

@using (Html.BeginForm())
 {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Servers</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ServerId, servers, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ServerId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Join" class="btn btn-default" />
            </div>
        </div>


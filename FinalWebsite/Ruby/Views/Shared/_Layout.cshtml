<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-fixed-top fixed-top navbar-expand-md navbar-light bg-light">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Home |", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button type="button"
                        class="navbar-toggle navbar-toggler"
                        data-toggle="collapse"
                        data-target="#navbarColor01"
                        aria-controls="navbarColor01"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @Html.ActionLink("Ruby", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" id="navbarColor01">
                <ul class="nav navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Chat", "Index", "Chat", routeValues: null, htmlAttributes: new { @class = "nav-link" }) &nbsp;</li>
                    <li class="nav-item">@Html.ActionLink("Servers", "Index", "Servers", routeValues: null, htmlAttributes: new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Join a Server", "AddUserToServer", "Chat", routeValues: null, htmlAttributes: new { @class = "nav-link" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <center>
                <p>&copy; @DateTime.Now.Year - Ruby</p>
            </center>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*@Scripts.Render("~/bundles/dateformat")*@
    @Scripts.Render("~/Scripts/dateformat.js")
    @RenderSection("scripts", required: false)
</body>
</html>